{
  "name": "{{name}}",
  "version": "1.0.0",
  "description": "{{name}} project",
  "main": "./src/main.ts",
  "type": "module",
  "scripts": {
    "create:envs": "bash ./scripts/create_envs.sh",
    "create:certs": "bash ./scripts/create_certs.sh",
    "create:docs": "typedoc --entryPointStrategy expand ./src --name '{{name}} test' --out docs",
    "compose": "docker compose -f ./.dockers/compose.yml up",
    "compose:build": "sudo docker compose -f ./.dockers/compose.yml up --build",
    "compose:down": "docker compose -f ./.dockers/compose.yml down",
    "migration:generate": "docker exec -it {{name}}_app npx drizzle-kit generate --config=./src/data/drizzle/config/drizzle_kit.ts",
    "migration:push": "docker exec -it {{name}}_app npx tsx ./src/data/drizzle/config/migrate.ts",
    "migration:seed": "docker exec -it {{name}}_app npx tsx ./src/data/drizzle/config/seed.ts",
    "migrate": "npm run migration:generate && npm run migration:push",
    "build": "npx ts-patch install && tsc",
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles || true",
    "dev": "nodemon"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.24.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "tsx": "^4.17.0",
    "typedoc": "^0.26.5",
    "typescript": "^5.5.4",
    "typescript-transform-paths": "^3.5.3",
    "ts-patch": "^3.3.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "outputPath": "./coverage/test-report.html"
        }
      ]
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "setupFiles": [
      "./src/jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "./node_modules",
      "./dist",
      "./endpoints",
      "./DB",
      "./.dockers"
    ]
  }
}